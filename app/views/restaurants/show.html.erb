<h1><%= @restaurant.name %></h1>

<h4><%= @restaurant.phone_number %></h4>

<p><%= @restaurant.address %></p>
<p><%= @restaurant.category %></p>

<p><%= link_to "Laisser un avis sur le restaurant", new_restaurant_review_path(@restaurant) %></p>
<p><%= link_to "Liste des restaurants", restaurants_path %></p>
<br>

<% @restaurant.reviews.each do |review| %>
  <h4><%= review.content %></h4>
  <p><%= review.rating %></p>
  <br>
<% end %>
